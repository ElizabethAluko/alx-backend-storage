#!/usr/bin/env python3

"""
This script connects to a MongoDB server and lists all databases.
"""

from pymongo import MongoClient

def list_databases(host='localhost', port=27017):
    """
    List all databases on the MongoDB server.

    :param host: MongoDB server hostname or IP address.
    :param port: MongoDB server port number.
    """
    try:
        client = MongoClient(host, port)
        database_names = client.list_database_names()
        for name in database_names:
            print(name)
    except Exception as e:
        print(f"An error occurred: {e}")

if __name__ == "__main__":
    list_databases()
